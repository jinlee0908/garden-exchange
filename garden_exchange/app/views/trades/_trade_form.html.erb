<div class = "row">
  <div class = "span6 offset3">

    <%=form_for([@item,@trade]) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.hidden_field :item_id, {value: @item.id }%>
        
        <%= f.text_field :name, :placeholder => 'My Name' %>

        <%= f.text_area :comment, :placeholder => 'Add a note. Ask a question.' %>

        <%= f.text_field :trade_email, :placeholder => 'Contact me by email.' %>

        <%= f.text_field :phone_num, :placeholder => 'Contact me by text' %>

        <%= f.submit "Request it", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to 'Nevermind', root_url, class: "btn btn-large btn-primary" %>
  </div> <!-- span6 offset3 -->
</div>   <!-- row -->