<h3>Search List</h3>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Category</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.category.category, new_item_trade_path(item.id) %></td>
          <td><%= link_to item.description, new_item_trade_path(item.id) %></td>
        </tr>
      <% end %>     
    </tbody>
  </table>
</div>
<br>

