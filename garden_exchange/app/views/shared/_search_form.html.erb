<%= form_for :search, method: :post, url: root_path do |f| %>

<!--   <%= f.hidden_field @current_location_by_ip %> -->

  <div>
    <%= f.submit "Search", class: "btn btn-large btn-primary" %>
  </div>

  <div>
    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
    <%= f.label :longitude %>
    <%= f.text_field :longitude %>
  </div>

  <div>
    <%= f.label :miles %>
    <%= f.text_field :miles %>
  </div>

  <div>
    <%= f.label :category %>
    <%= collection_select(:item, :category_id, Category.all, :id, :category) %>
  </div>

  <div>
    <%= f.label '#' %>
    <%= f.text_field '#'%>
  </div>

<% end %>

